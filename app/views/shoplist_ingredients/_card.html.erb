<div class="card mb-3">
  <h2 class="card-header h4">
    Shoplist Ingredient #<%= shoplist_ingredient.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Shoplist</dt>
      <dd><%= shoplist_ingredient.shoplist_id %></dd>

      <dt>Price</dt>
      <dd><%= shoplist_ingredient.price %></dd>

      <dt>Name</dt>
      <dd><%= shoplist_ingredient.name %></dd>

      <dt>Units</dt>
      <dd><%= shoplist_ingredient.units %></dd>

      <dt>Quantity</dt>
      <dd><%= shoplist_ingredient.quantity %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back shoplist_ingredient, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_shoplist_ingredient_url(shoplist_ingredient), class: "btn btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to shoplist_ingredient, method: :delete, data: { confirm: "Do you really want to delete this shoplist_ingredient?" }, class: "btn btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(shoplist_ingredient.updated_at) %> ago
  </div>
</div>
