<tr>
  <td>
    <%= shoplist.recipe_id %>
  </td>

  <td>
    <%= shoplist.name %>
  </td>

  <td>
    <div class="btn-group">
      <%= link_to shoplist, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-search-plus fa-fw"></i>
      <% end %>

      <%= link_to edit_shoplist_url(shoplist), class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-edit fa-fw"></i>
      <% end %>

      <%= link_to shoplist, method: :delete, data: { confirm: "Do you really want to delete this shoplist?" }, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-trash-alt fa-fw"></i>
      <% end %>
    </div>
  </td>
</tr>
